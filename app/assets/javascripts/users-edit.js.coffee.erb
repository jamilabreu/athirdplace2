jQuery ->
	$('.chzn-select').chosen()
	$('.chzn-select-optional').chosen({allow_single_deselect: true})
	$('#user_bio, #user_company').autosize()
	
	$('#user_standing').on 'change', () ->
		if $(this).val() is "<%= Community.find_by(name: 'Alumni').id %>"
			$('#user_degree').val("<%= Community.find_by(name: 'Bachelor\'s').id %>")
			$('#alumni_fields').show()
		else if $(this).val() is "<%= Community.find_by(name: 'Graduate Student').id %>"
			$('#user_degree').val("<%= Community.find_by(name: 'Persuing Master\'s').id %>")
			$('#alumni_fields').show()
		else
			$('#user_degree').val("<%= Community.find_by(name: 'Persuing Bachelor\'s').id %>")
			$('#alumni_fields').hide()
		
