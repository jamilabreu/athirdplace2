#login
	.container
		#login-inner
			= link_to "#{request.protocol + request.domain}/users/auth/facebook", id: "sign_in" do
				%i.icon-facebook-sign
				Sign In with Facebook
			#login-tagline
				welcome to
				%b thirdplace
				- if @community
					\- a global support network for
					= @community.name.pluralize.downcase
				- else
					\- the global support networks you care about
				 
				%span &nbsp;|
				%i.icon-caret-right
