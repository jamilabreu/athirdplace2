$('#preview_post').show();
<% if @name %>
	$('#post__type').val("Event");
	$('#post_image').val('<%= j @image.html_safe %>');
	$('#post_normal_image').val('<%= j @normal_image.html_safe %>');
	$('#post_large_image').val('<%= j @large_image.html_safe %>');
	$('#post_start_time').val('<%= @start_time %>');
	$('#post_end_time').val('<%= @end_time %>');
	$('#preview_post_contents').css('marginRight','200px');
	$('#preview_post_image').html('<%= j image_tag @large_image %>');
	$('#post_title').val('<%= j @name.html_safe %>').trigger('autosize');
	$('#post_body').val('<%= j @body.html_safe %>').trigger('autosize');
<% else %>
	$('#preview_post_contents').css('marginRight','60px');
	$('#preview_post_image').html('<%= j image_tag current_user.image %>');
	$('#post_title').val('<%= j current_user.name %>').trigger('autosize');
	$('#post_body').val('<%= j params[:q] %>').trigger('autosize');
<% end %>