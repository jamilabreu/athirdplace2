.modal-inner
	.modal-header
		%h3
			= image_tag user.image, :class => "modal-image"
			%span= user.first_name
	.modal-body
		= form_for Message.new do |f|
			= f.text_area :body
			= f.hidden_field :recipient_id, { value: user.id }
			.modal-footer
				= f.submit "Send", :id => "submit_message", :class => "btn btn-primary"
				%a{ :href => "#", :class =>"btn", "data-dismiss" => "modal"}
					Cancel